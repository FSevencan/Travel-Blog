@using TravelProje.Models.Sınıflar
@model List<Blog>


@{
    ViewBag.Title = "Index";
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Free Easy-Trip Website Template | Home :: w3layouts</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/web/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/web/js/jquery.min.js"></script>
    <script src="~/web/js/responsiveslides.min.js"></script>

    <script>
        // You can also use "$(window).load(function() {"
        $(function () {
            // Slideshow 1
            $("#slider1").responsiveSlides({
                auto: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
            });
        });
    </script>
</head>

<div class="header-banner">
    <div class="wrap">
        <div class="banner">
            <div class="indent">
                <h2 class="indent-left margin-bot" style="margin-left:80px;">Tatil & Seyahat Blogum </h2>
                <div class="banner-left">
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/glass.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Restoranlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/flight.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Uçuşlar</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/group.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Yapılacak Aktiviteler</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="con-text">
                        <div class="grid1-img">
                            <img src="~/web/images/key.png" alt="">
                        </div>
                        <div class="grid1-desc">
                            <p>Araç Kiralama</p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="header_bottom_right_images">
                   
                    <div class="slider">
                        <ul class="rslides" id="slider1">
                       @foreach (var x in Model)
                            {
                               <li><img src="@x.BlogImage" alt=""></li>
                            }

                        </ul>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<div class"content">
    <div class="wrap">
        <div class="wrapper">
            <div class="con-top">
                <h3>Tatil Seyehat Bloğuma Hoşgeldiniz!</h3>
                <p>
                    Blogumuzda, okuyucularımıza dünya çapında yerleri keşfetmeleri, kültürleri tanımaları ve yolculukları planlamaları konusunda yardımcı olmak için buradayız.

                    Blogumuzda, dünya çapında popüler turistik yerlerin yanı sıra, daha az bilinen ama keşfedilmeyi bekleyen güzellikleri de içermektedir. Her yer hakkında detaylı bilgiler sunuyoruz, hangi zaman diliminde gitmenizin en uygun olduğu, ne gibi aktiviteler yapabileceğiniz, nerede kalabileceğiniz ve ne yeme-içme seçenekleri olduğu gibi konuları içermektedir.

                    Ayrıca, yolculuk planlaması konusunda da okuyucularımıza rehberlik ediyoruz. Uçak bileti, otel rezervasyonu, seyahat sigortası gibi konular hakkında bilgi veriyoruz. 
                </p>
            </div>
            @Html.Action("Partial1","Home")  @**PARTIAL OLARAK OLUSTRUDUGUMUZ SEYI BURDA EKLEDIK. PARANTEZ ICI İSİM , CONTROLLER ISMI*@
           
            <div class="grids">
                <div class="box1">
                    <div class="padding">

                        <h4>En Popüler 10 Blog</h4>
                        <ul class="list list-pad">
                            @{int i = 0; }
                            @foreach (var y in Model)
                            {
                                <li class="list-bg"><span>@{i++;} @i.</span><a href="/Blog/BlogDetay/@y.ID">@y.Baslik</a></li>
                            }

                            
                        <a href="/Blog/Index" class="link1">Tüm Blogları Gör</a>
                    </div>
                    @Html.Action("Partial2", "Home")

                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</div>


