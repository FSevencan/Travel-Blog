
@model TravelProje.Models.Sınıflar.Yorumlar


@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Güncelleme Sayfası</h2>
<br />

@*// bizden 3 tane parametre istiyor
    // 1 cısı begınformun altında bulunan kodlar ne zaman calısacak
    //blogguncelle devreye gırdıgı zaman ,  admıncontrollerın ıcınde ,  ne zaman calısacak ?
    sayfada bır butona tıklanıp post ıslemı gerceklestıgı zaman*@

@using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })

    @*@readonly= "readonly" == Bunu yazarak Sayfada ID nın sadece okunabılır olmasını sagladık
        üzerinde değişilkik yapılamıyor artık.*@
    <br />
    @Html.LabelFor(x => x.KullaniciAdi)
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Yorum)
    @Html.TextAreaFor(x => x.Yorum,3,1, new { @class = "form-control" })

    <br />
    <button class="btn btn-success">Yorum Güncelle</button>


}
