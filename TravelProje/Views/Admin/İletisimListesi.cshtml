@using TravelProje.Models.Sınıflar
@model List<İletisim>


@{
    ViewBag.Title = "İletisim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İletişim Mesaj Listesi</h2>


<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>AdSoyad</th>
        <th>Mail</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Sil</th>
    <tr>

        @foreach (var x in Model)
        {
        <tr>

            <th style="width:50px">@x.ID</th>
            <td>@x.AdSoyad</td>
            <td>@x.Mail</td>
            <td>@x.Konu</td>
            <td>@x.Mesaj</td>
            <td style="width:50px"> <a href="/Admin/MesajSil/@x.ID" class="btn btn-danger">Sil</a></td>
            

        </tr>

    }


    </table>