@model TravelProje.Models.Sınıflar.Admin

@{
    Layout = null;
}
<html lang="tr">

<head>
    <meta charset="utf-8">
    <title>Tatil & Seyahat Blogum</title>

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700|Lato:200,50,150,350,450' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="~/web4/css/animate.css">
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="~/web4/css/style.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="top">
            <h1 id="title" class="hidden"><span id="logo">Blog <span>Yazar Girişi</span></span></h1>
        </div>
        <div class="login-box animated fadeInUp">
            <div class="box-header">
                <h2>Log In</h2>
            </div>
            @using (Html.BeginForm("Login", "GirişYap", FormMethod.Post))
            {
                <label for="username">Kullanıcı Adı:</label>
                <br />
                <input type="text" name="Kullanici">
                <br />
                <label for="password">Şifre:</label>
                <br />
                <input type="password" name="Sifre">
                <br />
                <button type="submit">Giriş Yap</button>
                <br />

            }

        </div>
    </div>
</body>

<script>
$(document).ready(function () {
    	$('#logo').addClass('animated fadeInDown');
    	$("input:text:visible:first").focus();
	});
	$('#username').focus(function() {
		$('label[for="username"]').addClass('selected');
	});
	$('#username').blur(function() {
		$('label[for="username"]').removeClass('selected');
	});
	$('#password').focus(function() {
		$('label[for="password"]').addClass('selected');
	});
	$('#password').blur(function() {
		$('label[for="password"]').removeClass('selected');
	});</script>

</html>